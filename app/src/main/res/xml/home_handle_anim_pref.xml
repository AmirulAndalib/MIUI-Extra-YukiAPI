            app:defaultValue="0"
            app:min="-1000"
            app:updatesContinuously="true"
            app:title="@string/home_handle_offset_x_title" />
        <SeekBarPreference
            android:max="50"
            app:key="home_handle_setting_offsety_home"
            app:defaultValue="0"
            app:min="-15"
            app:updatesContinuously="true"
            app:title="@string/home_handle_offset_y_title" />
        <SeekBarPreference
            android:max="3000"
            app:key="home_handle_setting_duration_alpha_home"
            app:defaultValue="600"
            app:min="0"
            app:updatesContinuously="true"
            app:title="@string/home_handle_anim_duration_alpha" />
        <SeekBarPreference
