            app:defaultValue="600"
            app:min="0"
            app:updatesContinuously="true"
            app:title="@string/home_handle_anim_duration_xy" />
    </PreferenceCategory>
    <PreferenceCategory app:title="@string/home_state_title" app:key="anim_on_home">
        <SeekBarPreference
            android:max="100"
            app:key="home_handle_setting_transdegree_home"
